<tr id='room_<%= room.id %>' class="<%= cycle("list-line-odd", "list-line-even", :name => "active") %>">
  <td><%= room.number %></td>
  <td><%= room.description %></td>
  <td><%= room.charges_per_hr %></td>
  <td><%= room.key_no %></td>
  <td><%= room.status.name %></td>
  <% if @current_user.admin? -%>
      <td>  <%= button_to 'edit', update_room_path(room), :remote => :true, :class => "button" %>
      <td><%= button_to 'destroy', rooms_destroy_path(room), :confirm=>"Are you sure?", :class=>'button' -%></td>
  <% end -%>
</tr>

