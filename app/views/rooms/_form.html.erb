<%= form_for(@room) do |f| %>
    <% if @room.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

          <ul>
            <% @room.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <% if @current_user.admin %>
        <div class="field">
          <%= f.label :number %>
          <br/>
          <%= f.text_field :number %>
        </div>
        <div class="field">
          <%= f.label :description %>
          <br/>
          <%= f.text_field :description %>
        </div>
        <div class="field">
          <%= f.label :charges_per_hr %>
          <br/>
          <%= f.text_field :charges_per_hr %>
        </div>
        <div class="field">
          <%= f.label :key_no %>
          <br/>
          <%= f.text_field :key_no %>
        </div>

    <% end %>
    <div class="field">
      <%= f.label :status %>
      <br/>

      <%= f.collection_select(:status_id, Status.all, :id, :name) %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
