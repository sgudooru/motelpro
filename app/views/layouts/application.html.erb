<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8"/>

  <title><%= controller.controller_name.capitalize %> - MotelPro</title>
  <%= stylesheet_link_tag 'screen', :media => "screen, projection" %>
  <%= stylesheet_link_tag 'print', :media => "print" %>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= javascript_include_tag :defaults %>
  <script type="text/javascript" src="/javascripts/prototype.js"> </script>
  <script type="text/javascript" src="/javascripts/window.js"> </script>

  <link href="/stylesheets/themes/default.css" rel="stylesheet" type="text/css"/>

  <%= csrf_meta_tag %>

</head>

<body>
<div id="content">
  <div id="header">
    <div id="inner-header">
      <h1>MotelPro</h1>

      <p id="status"><%= "welcome " -%>&nbsp;<%= link_to @current_user.username, user_path(@current_user.id) -%>&nbsp;&nbsp;|&nbsp;&nbsp;<%= link_to (:logout), logout_path, :method => :delete -%></p>

      <div id="nav">

        <ul id="nav-right">
          <%= tab_for :dashboard, dashboard_index_path, t('menu.dashboard') %>
          <%= tab_for :rooms, rooms_path, t('menu.rooms') %>
          <%= tab_for :customers, customers_path, t('menu.customers') %>

          <% if @current_user.admin %>
              <%= tab_for :users, users_path, t('menu.users') %>
          <% end %>
          <%= tab_for :reports, user_path( user= User.find_by_username(@current_user.username).id), t('menu.reports') %>
        </ul>
      </div>
      <!-- end nav -->
    </div>
    <!-- end inner-header -->
  </div>
  <!-- end header -->

  <div id="shadow"></div>

  <div id="main">
    <div id="left-column">
      <div class="box">
        <%= show_flash %>
        <div id="flash_notice" style="display:none"></div>
        <br/>
        <%= yield %>
      </div>
    </div>
    <div id="right-column">
      <%= yield :button_list -%>

    </div>
    <!-- end right-column -->
    <!-- end left-column -->
    <!-- end right-column -->
  </div>
  <!-- end main -->

  <br/><br/></div>
<!-- end content -->

<div id="footer">
  <p><%= t 'powered_by' -%>&nbsp;<strong>MotelPro</strong></p>
</div>

</body>
</html>
